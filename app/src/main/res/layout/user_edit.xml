<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".LoginActivity" >
    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bike" />
    <TextView
        android:id="@+id/ex"
        android:layout_below="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="아이디는 수정 불가합니다."
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_below="@+id/ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:id="@+id/userId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:background="@drawable/tumyeong"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="PW"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:id="@+id/userPass"
                android:paddingLeft="10dp"
                android:background="@drawable/tumyeong"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btn_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tumyeong"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="휴대폰"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:id="@+id/userPhone1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/tumyeong"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:inputType="phone"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/userPhone2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/tumyeong"
                android:singleLine="true"
                android:gravity="center"
                android:inputType="phone"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/userPhone3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/tumyeong"
                android:singleLine="true"
                android:inputType="phone"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="이용권"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:id="@+id/buyornot"
                android:paddingLeft="10dp"
                android:background="@drawable/tumyeong"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/join_border"
            android:gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="자동로그인"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:id="@+id/auto"
                android:paddingLeft="10dp"
                android:background="@drawable/tumyeong"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btn_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"/>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/regbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="변경"
        android:background="@drawable/button"/>

</RelativeLayout>
