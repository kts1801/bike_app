<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom">
        <ImageView
            android:id="@+id/login_drawable"
            android:layout_marginTop="60dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash" />
        <LinearLayout
            android:layout_below="@+id/login_drawable"
            android:layout_alignRight="@+id/two"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/text_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID "
                android:textSize="25dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/edit_car"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/join_border"
                android:ems="10"
                android:gravity="center"
                android:singleLine="true"
                android:hint="아이디를 입력해주세요" />
        </LinearLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/one"
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/text_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PW "
                android:textSize="25dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/edit_passwd"
                android:inputType="textPassword"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/join_border"
                android:ems="10"
                android:gravity="center"
                android:singleLine="true"
                android:hint="비밀번호를 입력해주세요" />
        </LinearLayout>

        <CheckBox
            android:layout_below="@+id/two"
            android:id="@+id/auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="자동 로그인"/>
        <LinearLayout
            android:layout_below="@+id/auto_login"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btn_join"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>